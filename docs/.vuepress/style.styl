@import val

h1, h2, h3, h4
    color $dicabegColor

.navbar span
    color $dicabegColor

.nav-item a:not(.external).router-link-active
    border-bottom-color $dicabegColor

.nav-item a:not(.external):hover
    border-bottom-color $dicabegColor

.sidebar
    color white
    background $dicabegColor

.sidebar a
    color white

.prev a:hover, .next a:hover
	color $dicabegColor

blockquote
	border-left-color $dicabegColor

img
    display block

#logo
    float left
    dimension 80px
    padding-right 10px

img.portada
    float right
    width 50%
    border-radius 30px

img.avatars
    float left
    dimension 100px
    border-radius 50%
    margin 30px 10px 0 0