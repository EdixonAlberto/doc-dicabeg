img
    display: block
    float: left

.navbar .logo
    height: 50px;
    width: 50px;
    margin-top: -6px;

.covers
    width: 48%
    border-radius: 30px

.cover-page
    float: right
    margin: 0 0 20px 20px

.avatars
    dimension 100px
    border-radius: 50%
    margin: 30px 10px 0 0

.logos:hover
    transform_scale_rotate()

.networks-logo
    float: none
    margin: auto
    transition: 0.2s

.networks-logo:hover
    transform_scale_rotate()

.logos-spin
    margin: 20px 10px 0 0
    transition: 0.5s

.logos-spin:hover
    transform_scale_spinning()

.screen
    width: 30%
    margin: 10px 60px 0 0
    transition: 0.5s

.screen:hover
    transform_scale: 1.3

@media screen and (max-width: 400px)
    .covers, .screen
        width: 100%

    .screen:hover
        transform_scale: 1.2